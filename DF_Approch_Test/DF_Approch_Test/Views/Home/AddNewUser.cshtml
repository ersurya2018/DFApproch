@model  DF_Approch_Test.Models.UserInfoModel

<form asp-action="AddNewUser" asp-controller="Home" method="Post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" type="text" class="form-control" maxlength="30" placeholder="Enter your name.." required />
    </div>
    <div class="form-group">
        <label>Email </label>
        <input asp-for="Email" type="email" class="form-control" maxlength="20" placeholder="Enter your Email.." required />
    </div>

    <div class="form-group">
        <label>Mobile </label>
        <input asp-for="Mobile" type="number" class="form-control" maxlength="12" placeholder="Enter your mobile.." required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" maxlength="10" placeholder="Enter Password.." required />
    </div>
    <button type="submit" class="btn btn-success">Register</button>
</form>